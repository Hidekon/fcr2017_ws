<launch>
  <!-- Launch the grid map simple demo node -->
  <node pkg="mapping" type="grid_map" name="grid_map_node" output="screen" />
  <!-- Launch the grid map visualizer -->
  <node pkg="grid_map_visualization" type="grid_map_visualization" name="grid_map_visualization" output="screen">
    <rosparam command="load" file="$(find mapping)/config/simple_demo.yaml" />
  </node>
  <!-- Launch RViz with the demo configuration -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find mapping)/rviz/grid_map_demo.rviz" />
</launch>
